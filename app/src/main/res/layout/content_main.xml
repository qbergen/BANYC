<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightYellow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.queenabergen.banyc.MainActivity">

    <TextView
        android:id="@+id/logo_singup_image"
        android:background="@drawable/chalkboardback"
        android:text="YOUTH 101"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:layout_width="400dp"
        android:layout_height="180dp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo_singup_image"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_background"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email_input"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background"
        android:inputType="textWebPassword"
        android:hint="Password"
        android:paddingLeft="20dp" />


    <Button
        android:id="@+id/signin_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/password_input"
        android:gravity="center"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="10"
        android:text="Sign In"
        android:textColor="#080808"
        android:textSize="30sp" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@id/signin_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="10"
        android:text="Create Account"
        android:textColor="#080808"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/socialmedia_login_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_btn"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebookicon"
            android:layout_below="@+id/signup_btn"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/google_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/signup_btn"
            android:layout_marginLeft="20dp"
            android:src="@drawable/google"
            android:layout_toRightOf="@+id/facebook_btn"
            android:layout_weight="1" />
    </LinearLayout>


</RelativeLayout>
