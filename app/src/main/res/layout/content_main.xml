<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightYellow"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.queenabergen.banyc.MainActivity">


    <LinearLayout
        android:id="@+id/socialmedia_login_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/top_set"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:id="@+id/google_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/signup_btn"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:src="@drawable/googlesignup" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_set"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/youthiconapp88"
            android:textColor="@color/yellow" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email_input"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:paddingLeft="20dp" />


        <Button
            android:id="@+id/signin_btn"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@id/password_input"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:text="Sign In"
            android:textColor="#080808"
            android:textSize="25sp" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:layout_below="@id/signin_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:shadowColor="#A8A8A8"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="10"
            android:text="Create Account"
            android:textColor="#080808"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>
