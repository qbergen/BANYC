<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:padding="2dp"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#1565C0"
        >

        <TextView
            android:id="@+id/spts_sitename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Site Name" />

        <TextView
            android:id="@+id/spts_program_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_sitename"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Program Type: " />

        <TextView
            android:id="@+id/spts_program_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_sitename"
            android:layout_toRightOf="@id/spts_program_type_title"
            android:textSize="14sp"
            android:text="Program Type" />

        <TextView
            android:id="@+id/spts_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_program_type_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Location: " />

        <TextView
            android:id="@+id/spts_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_program_type_title"
            android:layout_toRightOf="@id/spts_location_title"
            android:textSize="14sp"
            android:text="Location" />

        <TextView
            android:id="@+id/spts_agency_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_location_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Agency: " />

        <TextView
            android:id="@+id/spts_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_location_title"
            android:layout_toRightOf="@id/spts_agency_title"
            android:textSize="14sp"
            android:text="Agency" />

        <TextView
            android:id="@+id/spts_borough_comm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_agency_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Borough Community: " />

        <TextView
            android:id="@+id/spts_borough_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_agency_title"
            android:layout_toRightOf="@id/spts_borough_comm_title"
            android:textSize="14sp"
            android:text="Borough Community" />

        <TextView
            android:id="@+id/spts_program_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_borough_comm_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Program: " />

        <TextView
            android:id="@+id/spts_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_borough_comm_title"
            android:layout_toRightOf="@id/spts_program_type_title"
            android:textSize="14sp"
            android:text="Program" />

        <TextView
            android:id="@+id/spts_grade_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_program_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Age Level: " />

        <TextView
            android:id="@+id/spts_grade_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_program_title"
            android:layout_toRightOf="@id/spts_grade_level_title"
            android:textSize="14sp"
            android:text="Grade level Age Group" />

        <TextView
            android:id="@+id/spts_contact_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_grade_level_title"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Contact Number: " />

        <TextView
            android:id="@+id/spts_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@id/spts_grade_level_title"
            android:layout_toRightOf="@id/spts_contact_number_title"
            android:textSize="14sp"
            android:text="Contact Number" />

    </RelativeLayout>

</android.support.v7.widget.CardView>