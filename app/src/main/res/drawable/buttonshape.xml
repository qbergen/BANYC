        android:angle="65"
        android:centerColor="@color/lightYellow"
        android:centerX="5%"
        android:centerY="5%"
        android:endColor="@color/darkYellow"
        android:startColor="@color/darkYellow"
        android:type="radial"
        android:gradientRadius="170dp"/>
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
